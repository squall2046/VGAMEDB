<!-- ======================================= script ======================================= -->
<script>
    $("#signUpBtn").on("click", function () {
        event.preventDefault();
        let nameInput = $("#nameInput").val();
        let passInput = $("#passInput").val().split().join();
        let passConfirm = $("#passConfirm").val();

        console.log(nameInput)
        console.log(passInput)

        $.ajax({
            type: "POST",
            url: "/user/register",
            data: {
                UserName: nameInput,
                UserPass: passInput
            }
        }).then(
            function (data) {
                console.log(data);
            })

    })
</script>